{
  "name": "spiceflow",
  "version": "1.9.1",
  "description": "Simple API framework with RPC and type safety",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": "https://github.com/remorses/spiceflow",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./_node_utils": {
      "types": "./dist/_node_utils.d.ts",
      "browser": "./dist/_node_utils_browser.js",
      "workerd": "./dist/_node_utils_browser.js",
      "edge-light": "./dist/_node_utils_browser.js",
      "default": "./dist/_node_utils.js"
    },
    "./cors": {
      "types": "./dist/cors.d.ts",
      "default": "./dist/cors.js"
    },
    "./mcp": {
      "types": "./dist/mcp.d.ts",
      "default": "./dist/mcp.js"
    },
    "./mcp/transports": {
      "types": "./dist/mcp/transports/index.d.ts",
      "node": "./dist/mcp/transports/node.impl.js",
      "deno": "./dist/mcp/transports/deno.impl.js",
      "bun": "./dist/mcp/transports/bun.impl.js",
      "workerd": "./dist/mcp/transports/cloudflare.impl.js",
      "edge-light": "./dist/mcp/transports/cloudflare.impl.js",
      "default": "./dist/mcp/transports/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "node": "./dist/server/node.js",
      "deno": "./dist/server/deno.js",
      "bun": "./dist/server/bun.js",
      "workerd": "./dist/server/cloudflare.js",
      "edge-light": "./dist/server/cloudflare.js",
      "default": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./openapi": {
      "types": "./dist/openapi.d.ts",
      "default": "./dist/openapi.js"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "cp ../README.md ./README.md && rm -rf dist && tsc",
    "prepublishOnly": "pnpm build",
    "gen-openapi": "pnpm tsx scripts/openapi-fern.ts",
    "docs:dev": "pnpm run gen-openapi && fern docs dev",
    "docs:prod": "pnpm run gen-openapi && fern generate --docs --force",
    "fern-sdk": "pnpm run gen-openapi && fern generate --force ",
    "fern-docs": "pnpm run gen-openapi && fern generate --docs --force",
    "play-sdk:build": "pnpm vite build --config ./scripts/play-sdk.vite.ts",
    "test": "pnpm vitest",
    "_prepare": "pnpm build",
    "watch": "tsc -w"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [],
  "author": "Tommaso De Rossi, morse <beats.by.morse@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@medley/router": "^0.2.1",
    "eventsource-parser": "^3.0.0",
    "lodash.clonedeep": "^4.5.0",
    "openapi-types": "^12.1.3",
    "superjson": "^2.2.2",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node": "22.13.4",
    "eventsource": "^3.0.5",
    "formdata-node": "^6.0.3",
    "js-base64": "^3.7.7",
    "js-yaml": "^4.1.0",
    "typescript": "^5.8.3"
  }
}
