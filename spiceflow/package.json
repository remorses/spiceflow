{
  "name": "spiceflow",
  "version": "1.6.1",
  "description": "Simple API framework with RPC and type safety",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": "https://github.com/remorses/spiceflow",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cors": {
      "types": "./dist/cors.d.ts",
      "default": "./dist/cors.js"
    },
    "./mcp": {
      "types": "./dist/mcp.d.ts",
      "default": "./dist/mcp.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./openapi": {
      "types": "./dist/openapi.d.ts",
      "default": "./dist/openapi.js"
    },
    "./src/*": {
      "default": "./src/*"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "cp ../README.md ./README.md && rm -rf dist && tsc",
    "prepublishOnly": "pnpm build",
    "gen-openapi": "pnpm tsx scripts/openapi-fern.ts",
    "docs:dev": "pnpm run gen-openapi && fern docs dev",
    "docs:prod": "pnpm run gen-openapi && fern generate --docs --force",
    "fern-sdk": "pnpm run gen-openapi && fern generate --force ",
    "fern-docs": "pnpm run gen-openapi && fern generate --docs --force",
    "play-sdk:build": "pnpm vite build --config ./scripts/play-sdk.vite.ts",
    "test": "pnpm vitest",
    "prepare": "# pnpm build",
    "watch": "tsc -w"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [],
  "author": "Tommaso De Rossi, morse <beats.by.morse@gmail.com>",
  "license": "",
  "dependencies": {
    "@hiogawa/transforms": "^0.0.0",
    "@hiogawa/utils": "^1.7.0",
    "@jacob-ebey/react-server-dom-vite": "19.0.0-experimental.14",
    "@sinclair/typebox": "^0.34.14",
    "@vitejs/plugin-react": "^4.3.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "es-module-lexer": "^1.6.0",
    "eventsource-parser": "^3.0.0",
    "history": "^5.3.0",
    "isbot": "^4.1.0",
    "lodash.clonedeep": "^4.5.0",
    "object-treeify": "^5.0.1",
    "openapi-types": "^12.1.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rsc-html-stream": "^0.0.4",
    "spiceflow": "*",
    "superjson": "^2.2.2",
    "unplugin-rsc": "^0.0.11",
    "vite": "^6.1.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node": "22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eventsource": "^3.0.5",
    "formdata-node": "^6.0.3",
    "js-base64": "^3.7.7",
    "js-yaml": "^4.1.0"
  }
}
